{
  "time": {
    "yearly": {
      "day_of_week": "*",
      "day": "1",
      "month": "1",
      "delay": "10 years"
    },
    "monthly": {
      "day_of_week": "*",
      "day": "1",
      "month": "*",
      "delay": "1 year"
    },
    "weekly": {
      "day_of_week": "1",
      "day": "*",
      "month": "*",
      "delay": "2 months"
    },
    "daily": {
      "day_of_week": "*",
      "day": "*",
      "month": "*",
      "delay": "10 days"
    }
  },
  "repository": {
    "path": "/tmp/backup"
  },
  "rsync": {
    "options": "-rlogtpxW --delete-after --delete-excluded --exclude *.log"
  },
  "servers": {
    "demo1": {
      "hostname": "demo1.example.com",
      "snapshots": {
        "snaphome": {
          "group": "/dev/vg",
          "volume": "home",
          "size": "10G",
          "auto_resize": true,
          "mount": "/snapshots/home"
        },
        "snapsql": {
          "group": "/dev/vg",
          "volume": "sql",
          "size": "10G",
          "auto_resize": true,
          "mount": "/snapshots/sql"
        }
      },
      "backups": {
        "web": {
          "type": "files",
          "snapshots": "snaphome",
          "path": "/web",
          "rsync": {
            "more_options": "--exclude var/cache --exclude vendor --exclude app/cache"
          }
        },
        "sql": {
          "type": "mysql",
          "snapshots": "snapsql",
          "mysql": {
            "socket": "/var/run/mysqld/mysqld.sock",
            "stop_slave": true,
            "slave_start": true
          },
          "path": ""
        }
      }
    }
  }
}